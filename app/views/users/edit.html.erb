<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8">
    <h2>User Info</h2>
    <%= render 'books/errors', model: @user %>
    <%= form_with model: @user do |f| %>
    <div>
      <label for="inputName">Name</label><br>
      <%= f.text_field :name, class:"form-control ", autofocus: true, id:"inputName", placeholder:"名前"%>
      </div>
      <div>
      <label for="inputImage">Image</label><br>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      </div>
      <label for="inputIntroduction">Introduction</label><br>
      <%= f.text_field :introduction, class:"form-control introduction", autofocus: true, id:"inputIntroduction"%>
      <div>
      <%= f.submit "Update User", class:"btn btn-secondary"%>
      </div>
    <% end %>
    </div>
  </div>
</div>
