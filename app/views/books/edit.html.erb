<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8">
    <h1>Editing Book</h1>
    <%= render 'errors', model: @book %>
    <%= form_with model: @book do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      <div>
      <%= f.submit 'Update Book', class:"btn btn-success" %>
      </div>
      <% end %>
      <div>
      <%= link_to 'Show', @book %> |
      <%= link_to 'Back', books_path %>
      </div>
    </div>
  </div>
</div>

